<p id="notice"><%= notice %></p>


<h1>Categories</h1>
<div class = 'container'>
<table id="category_table" class="table table-striped table-bordered" style="width: 1000px">
  <thead>
   <tr>
     <th>Name</th>
     <th>Parent Id</th> 
    </tr>
  </thead>

  <tbody>
   <tr>
    <% @categories.each do |category| %>
      
      <td><%=category.name %> </td>
      <td><%=category.parent_id%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
</div>


<script>
$(document).ready(function() {
    $('#category_table').DataTable();
  });
</script>