
<button id="buts"></button>
<div class='container'>
	<div class="row">

		<div class="col-md-12">
			<div class="paged-header">
				<h1>Expenses
				</h1>
			</div>
		</div>
	</div>

<div class="row">

<div class="col-md-12">
<button id="showform" class= 'btn btn-primary' > Add New Expense</button>


	<%= render 'form', expense: @expense %>


<div class='container'>

<%if @expenses.exists? %>
		<table id="expensesTable" class="table table-striped table-bordered" style="width:100%" >
			<thead>
				<tr>
					
					<th class="col-xs-12 col-sm-6 col-md-4 col-lg-2" scope="col">Date</th>
					<th class="col-xs-12 col-sm-6 col-md-4 col-lg-2" scope="col">Accountname</th>
					<th class="col-xs-12 col-sm-6 col-md-4 col-lg-2" scope="col">Description</th>
					<th class="col-xs-12 col-sm-6 col-md-4 col-lg-2" scope="col">Amount</th>
					<th class="col-xs-12 col-sm-6 col-md-4 col-lg-2" scope="col"></th>
				</tr>
			</thead>
			<tbody class="table-hover">

				<% @expenses.each do |expense|%>
			
				<tr>
					
					<td><%= expense.Date%></td>
					<td><%= expense.AccountName%></td>
					<td><%= expense.Description%></td>
					<td><%= expense.amount%></td>
					
					<td> <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe,expense, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>

					
					
				</tr>
		
				<% end %>
				
			</tbody>
		</table>

				<%else%>
					<p class ='alert-info notice-board'> Table is empty, add a new records.</p>
				<%end%>


</div>
	</div>
</div>

</div>







